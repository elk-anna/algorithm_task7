import java.util.Scanner;

public class Case3 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter a number (if there is more then one number, separate them with a space): ");

        String line = input.nextLine();
            String [] parts = line.split (" ");
            int [] number = new int [parts.length];
                for (int i = 0; i < parts.length; i++) {
                number [i] = Integer.parseInt(parts[i]);
                }

                int max = number [0];
                int min = number [0];
                int sum = 0;

                for (int n: number) {
                    if (n>max) max = n;
                    if (n<min) min = n;
                    sum+=n;
                }
                double avg = (double) sum / 
                number.length;

                System.out.println("the largest number: " + max);
                System.out.println("the lowest number: " + min);
                System.out.println("sum total: "+ sum);

                System.out.println("Average: " + avg);

                System.out.println();
                input.close();
    }
}
